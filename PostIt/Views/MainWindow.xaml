<Window x:Class="PostItProject.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p = "clr-namespace:PostItProject.Properties"
        xmlns:local="clr-namespace:PostItProject.Views"
        xmlns:uc="clr-namespace:PostItProject.Views.UserControls"
        xmlns:vmUc="clr-namespace:PostItProject.ViewModels.UserControls"
        xmlns:vm ="clr-namespace:PostItProject.ViewModels"
        mc:Ignorable="d"
        Title="{x:Static p:Text.MainWindow}" Height="350" Width="525"
        DataContext="{DynamicResource ViewModelMainWindow}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Recources/Templates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <vm:ViewModelMainWindow x:Key="ViewModelMainWindow"/>

            <DataTemplate DataType = "{x:Type vmUc:ViewModelPostIt}">
                <ContentControl Name="DesignerItem"
                                Width ="{Binding Model.Width, Mode=OneWay}"
                                Height="{Binding Model.Height, Mode=OneWay}"
                                Template="{StaticResource MovableControlTemplate}">
                    <uc:PostItControl x:Name="Test"></uc:PostItControl>
                </ContentControl>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>

<StackPanel Orientation="Vertical">

            <ItemsControl ItemsSource="{Binding SomeEntityCollection}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas IsItemsHost="True"
                                Width="250"
                                Height="300"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="{x:Type ContentPresenter}">
                        <d:Style.DataContext>
                            <x:Type Type= "vmUc:ViewModelPostIt" />
                        </d:Style.DataContext>
                        <Setter Property="Canvas.Left"
                                Value= "{Binding Model.PosX, Mode=OneWay}"/>
                        <Setter Property="Canvas.Top"
                                Value= "{Binding Model.PosY, Mode=OneWay}"/>

                    </Style>
                </ItemsControl.ItemContainerStyle>
                
                
            </ItemsControl>
            <Button Click="ButtonBase_OnClick">Test</Button>

    </StackPanel>
    </Grid>
</Window>
